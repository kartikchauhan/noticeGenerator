<!DOCTYPE html>
<html>
<body>

<p>A script on this page starts this clock:</p>

<p id="demo"></p>

<script>
   var h = 1;
   var m = 0;
   var s = 10;
var myVar = setInterval(myTimer, 1000);
 
function myTimer() {
 
   if(s==0 && m==0 && h==0){
   clearInterval(myVar);
}
   else if(s==0){
   if(m==0){
    s=m=59;
    h--;
   }
   m--; 
   s=59; 
  
  }



else{
s--;
}
s=String(s);
m = String(m);
h= String(h);

if(s<10){
s =String(0+s);
}
if(m<10){
m = String(0+m);
}
if(h<10){
h = String(0+h);
}

document.getElementById("demo").innerHTML = h+m+s;
 h=parseInt(h);
  m = parseInt(m);
   s = parseInt(s);
}
</script>

</body>
</html>
